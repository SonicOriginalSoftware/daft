{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "args": [
        "--manifest-path",
        "server/Cargo.toml"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Build Debug Portal Server"
    },
    {
      "type": "npm",
      "script": "build",
      "path": "app/",
      "group": "build",
      "problemMatcher": [],
      "label": "Build App",
      "detail": "rollup -c --environment PUBLIC:public"
    }
  ]
}
